<div class="modal fade" id="crew-selector" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title">Please select your Blue Trolley crew</h4>
      </div>
      <div class="modal-body">
        <%= form_for(@user, html: { class: "form-horizontal" }) do |f| %>
          <div class="form-group">
            <%= f.label :crew, class: "control-label col-sm-3" %>
            <div class="col-sm-6">
              <%= collection_select :user, :crew_id, all_crews, :id, :name,
                { include_blank: false }, { class: "form-control" } %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
      </div>
    </div>
  </div>
</div>
