- provide(:title, @user.name)

- unless current_user.activated?
  .alert.alert-danger.alert-dismissable{ role: 'alert' }
    %button.close{ type: 'button', data: { dismiss: 'alert' }}
      %span &times;
    You account is not activated
    %p
      %small
        Please verify your email address. You should receive the email with activation link.
        Please click the link to activate your Blue Trolley account.

.ibox.float-e-margins
  .ibox-title
    %h5
      My Participants
      %small &nbsp;may contain family members, friends, and all persons belong to the user account
    .ibox-tools
      %a.collapse-link
        %i.fa.fa-chevron-up
      %a.dropdown-toggle{ href: '#', data: { toggle: 'dropdown' }}
        %i.fa.fa-wrench
      %ul.dropdown-menu.dropdown-user
      %a.close-link
        %i.fa.fa-times
  .ibox-content
    = render 'shared/participants', participants: user_participants, show_crew: false

    - if @user.activated?
      = link_to new_participant_path(user_id: @user.id), class: 'btn btn-primary' do
        %i.fa.fa-user-plus
        New Participant
      &nbsp;
      = link_to events_path, class: 'btn btn-success' do
        %i.fa.fa-calendar-check-o
        My Events

    - else
      = link_to 'Resend Activation Email', new_account_activation_path, class: 'btn btn-warning', title: 'Click here to resend account activation email'



