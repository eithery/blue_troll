= provide(:title, 'Register')
.middle-box.text-center.loginscreen.animated.fadeInDown
  = image_tag 'tarakan_bw.png'

  %h3 Register to BLUE TROLLEY Club
  = form_for(@user, html: { class: 'm-t', role: 'form' }) do |f|
    .form-group
      = f.text_field :login, placeholder: "User login", maxlength: 20, autofocus: true, required: true, class: 'form-control'
    .form-group
      = f.password_field :password, placeholder: 'Password', maxlength: 16, required: true, class: 'form-control'
    .form-group
      = f.password_field :password_confirmation, placeholder: 'Password confirmation', maxlength: 16, required: true, class: 'form-control'
    .form-group
      = f.email_field :email, class: "form-control", maxlength: 64, required: true, placeholder: 'Email address'
    .form-group
      = f.email_field :email_confirmation, class: "form-control", maxlength: 64, required: true, placeholder: 'Email address confirmation'

    = f.submit 'Register', class: 'btn btn-primary block full-width m-b'

    %p.text-muted.text-center
      %small Already have an account?
    = link_to 'Login', login_path, class: 'btn btn-sm btn-white btn-block'

  %p.m-t
    %small Blue Trolley Club &copy; 2009-2016
