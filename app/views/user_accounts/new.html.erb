<%= provide(:title, 'New User Account') %>
<div class="shadowed-form">
  <%= form_for(@user, html: { class: "form-horizontal well" }) do |f| %>
  <fieldset>
    <legend>New User Account Registration</legend>
    <%= render 'shared/error_messages', errors: @user.errors, entity_name: 'user account'  %>
    <div class="form-group">
      <%= f.label :login, class: "control-label col-sm-3" %>
      <div class="col-sm-4">
        <%= f.text_field :login, class: "form-control", maxlength: 20, autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "control-label col-sm-3" %>
      <div class="col-sm-4">
        <%= f.password_field :password, class: "form-control", maxlength: 16 %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'Password Confirmation', class: "control-label col-sm-3" %>
      <div class="col-sm-4">
        <%= f.password_field :password_confirmation, class: "form-control", maxlength: 16 %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "control-label col-sm-3" %>
      <div class="col-sm-7">
        <%= f.email_field :email, class: "form-control", maxlength: 64 %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email_confirmation, 'Email Confirmation', class: "control-label col-sm-3" %>
      <div class="col-sm-7">
        <%= f.email_field :email_confirmation, class: "form-control", maxlength: 64 %>
      </div>
    </div>

    <br/>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-7">
        <%= f.submit "Create my account", class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  </fieldset>
  <% end %>
</div>
