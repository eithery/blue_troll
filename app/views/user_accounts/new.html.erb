<%= provide(:title, 'New User Account') %>
<div class="well">
  <%= form_for(@user_account, html: { class: "form-horizontal" }) do |f| %>
  <%= render 'shared/error_messages' %>
  <fieldset>
    <legend>New User Account Registration</legend>

    <div class="form-group">
      <%= f.label :email, class: "control-label col-sm-3" %>
      <div class="col-sm-7">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email_confirmation, 'Email Confirmation', class: "control-label col-sm-3" %>
      <div class="col-sm-7">
        <%= f.text_field :email_confirmation, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "control-label col-sm-3" %>
      <div class="col-sm-4">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'Password Confirmation', class: "control-label col-sm-3" %>
      <div class="col-sm-4">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>

    <br/>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-7">
        <%= f.submit "Create my account", class: "btn btn-primary btn-lg"%>
      </div>
    </div>
  </fieldset>
<% end %>
</div>

