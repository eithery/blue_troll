<% provide(:title, "#{@user.name} profile") %>
<div><%= gravatar_for @user %></div>
<table class="table table-striped table-hover table-condensed" style="margin-left: 100px; width: 400px">
  <tbody>
    <tr><th>Login:</th><td><%= @user.login %></td></tr>
    <tr><th>Email:</th><td><%= link_to @user.email, "mailto:#{@user.email}" %></td></tr>
    <tr><th>Status:</th><td><%= "Active" %></td></tr>
    <tr><th>Crew:</th><td><%= @user.crew %></td></tr>
  </tbody>
</table>

<%= render 'crew_selector' %>

<h4>Registered Participants</h4>
<div class="shadowed-form">
  <table class="table table-bordered table-striped table-hover">
    <thead>
      <tr>
        <th class="col-sm-1">#</th>
        <th class="col-sm-5">Name</th>
        <th class="col-sm-4">Email</th>
        <th class="col-sm-1">Age</th>
        <th class="col-sm-1">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @user.participants.each.with_index do |participant, idx| %>
        <tr>
          <td><%= idx+1 %></td>
          <td><%= participant.full_name %></td>
          <td><%= link_to participant.email, "mailto:#{participant.email}" %></td>
          <td><%= participant.age %></td>
          <td>
            <div>
              <%= link_to image_tag('edit.png', alt: 'Edit Participant', class: "bt-img"),
                edit_participant_path(participant), title: "Click here to edit #{participant.display_name} profile",
                rel: 'tooltip' %>
              <%= link_to image_tag('delete.png', alt: 'Delete Participant', class: "bt-img"),
                participant_path(participant), method: :delete, rel: 'tooltip',
                title: "Click here to delete #{participant.display_name} from Blue Trolley participants list",
                data: { confirm: "Are you sure to delete #{participant.display_name} from the participants list?" } %>
              <%= link_to image_tag('ticket.png', alt: 'Generate ticket', class: "bt-img bt-img-reduced"),
                participant_ticket_path(participant_id: participant),
                title: "Click here to download a ticket for #{participant.display_name}", rel: 'tooltip' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Register new participant', new_participant_path(user_account_id: @user.id, crew_id: @user.crew),
  class: "btn btn-primary" %>
<%= link_to 'Select Crew', '#', class: "btn btn-primary", data: { toggle: "modal", target: "#crew-selector" } %>
<%= link_to 'Download my tickets', '#', class: "btn btn-info", disabled: true %>
<%= link_to 'Change password', '#', class: "btn btn-warning" %>
