%td= link_to participant.email, "mailto:#{participant.email}"
- if show_crew
  %td= participant.crew.name

%td= age_category participant
%td
  -#= participant.status
%td
  = link_to edit_participant_path(participant), title: "Click here to edit #{participant.display_name} profile" do
    %i.fa.fa-edit
  = link_to participant_path(participant), method: :delete, title: "Click here to delete #{participant.display_name}",
    data: { confirm: "Are you sure to delete #{participant.display_name} from the participants list?" } do
    %i.fa.fa-trash

