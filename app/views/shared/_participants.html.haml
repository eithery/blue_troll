.shadowed-form
  %table.table.table-bordered.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th.bt-col-2 #
        %th.bt-col-4 Name
        %th.bt-col-4 Email
        - if show_crew
          %th.bt-col-4 Crew

        %th.bt-col-1 Age
        %th Status
        %th.bt-col-3 Actions

    %tbody
      - participants.each.with_index do |participant, idx|
        %tr{ id: "participant_#{participant.id.to_s}", class: participant_class(participant) }
          = render 'shared/participant', participant: participant, index: idx, show_crew: show_crew
