<%= provide(:title, "Reset Password") %>
<div class="shadowed-form">
  <%= form_for(:reset_password, url: reset_password_path, html: {class: "form-horizontal well"}) do |f| %>
    <fieldset>
      <legend>Can't access your account?</legend>

      <div class="alert alert-info">
        If you can't access Blue Troll application, please enter your login or email address below
        and the special link will be sent to you with the details to access your user account
      </div>
      <br />

      <div class="form-group">
        <%= f.label :email, "Enter your login or email", class: "control-label col-sm-3" %>
        <div class="col-sm-5">
          <%= f.text_field :email, class: "form-control", maxlength: 64, autofocus: true, required: true  %>
        </div>
      </div>

      <br />
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-7">
          <%= f.submit 'Send email', class: "btn btn-primary btn-lg" %>
          <%= link_to 'Cancel', signin_path, class: "btn btn-default btn-lg" %>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>
