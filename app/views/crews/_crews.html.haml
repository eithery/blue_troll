.shadowed-form
  %table.table.table-bordered.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th #
        %th Crew Name
        %th Native Name
        %th Crew Lead
        %th Email
        %th Total (A/C/B)
        %th Paid
        %th Actions

    %tbody
      - @crews.each.with_index do |crew, idx|
        %tr= render 'crew', crew: crew, index: idx
