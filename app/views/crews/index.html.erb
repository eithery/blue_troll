<h1>Crews:</h1>
<table class="table table-bordered table-striped table-hover">
	<thead>
		<tr>
			<th class="span1">#</th>
			<th class="span3">Crew Name</th>
			<th class="span3">Native Name</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @crews.each.with_index do |crew, idx| %>
			<tr>
				<td><%= idx+1 %></td>
				<td><%= crew.name %></td>
				<td><%= crew.native_name %></td>
				<td>
					<%= link_to "View", participants_path(crew_id: crew.id), class: "btn btn-small btn-primary" %>
					<%= link_to "Add Participant", new_participant_path(crew_id: crew.id), class: "btn btn-small btn-primary" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
