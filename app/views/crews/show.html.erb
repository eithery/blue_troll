<%= provide(:title, @crew.name.html_safe) %>
<h4><%= @crew.display_name %></h4>
<div class="shadowed-form">
  <table class="table table-bordered table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th class="col-sm-1">#</th>
        <th class="col-sm-5">Name</th>
        <th class="col-sm-4">Email</th>
        <th class="col-sm-1">Age</th>
        <th class="col-sm-1">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @crew.participants.each.with_index do |participant, idx| %>
        <%= render 'shared/participant', participant: participant, index: idx %>
      <% end %>
    </tbody>
  </table>
</div>
