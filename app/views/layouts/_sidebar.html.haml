%nav.navbar-default.navbar-static-side{ role: 'navigation' }
  .sidebar-collapse
    %ul.nav.metismenu#side-menu
      %li.nav-header{ style: 'margin-top: 2px;' }
        .dropdown.profile-element
          %span= gravatar_for current_user
          %a.dropdown-toggle{ href: '#', data: { toggle: 'dropdown' }}
            %span.clear
              %span.block.m-t-xs
                %strong.font-bold
                  = current_user.name
              %span.text-muted.text-xs.block
                %small= current_user.email
                %b.caret

          %ul.dropdown-menu.animated.fadeInRight.m-t-xs
            %li= link_to 'Profile', current_user
            %li.divider
            %li= link_to 'Logout', logout_path, method: :delete

        .logo-element BT

      %li{ class: active_if(selected_view, :profile) }
        = link_to current_user do
          %i.fa.fa-edit
          %span.nav-label My Profile

      %li{ class: active_if(selected_view, :events) }
        = link_to events_path do
          %i.fa.fa-calendar-check-o
          %span.nav-label My Events
          %span.fa.arrow
        - unless active_if(selected_view, :events).blank?
          %ul.nav.nav-second-level
            - Event.all.each do |e|
              %li= link_to e.short_name, e

      %li{ class: active_if(selected_view, :crews) }
        = link_to crews_path do
          %i.fa.fa-group
          %span.nav-label All Crews

      - if current_user.admin?
        %li
          = link_to user_accounts_path do
            %i.fa.fa-user
            %span.nav-label User Accounts

        %li
          = link_to '#' do
            %i.fa.fa-cogs
            %span.nav-label Administration

        %li
          = link_to '#' do
            %i.fa.fa-download
            %span.nav-label Export Data
