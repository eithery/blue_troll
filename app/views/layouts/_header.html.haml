.row.border-bottom
  %nav.navbar.navbar-static-top.white-bg{ role: 'navigation', style: 'margin-bottom: 0' }
    .navbar-header
      %a.navbar-minimalize.minimalize-styl-2.btn.btn-primary{ href: '#' }
        %i.fa.fa-bars

      - if current_user.admin? || current_user.gatekeeper? || current_user.financier?
        = form_for(:search, url: search_participants_path, role: 'search', html: { class: 'navbar-form-custom' }) do |f|
          .form-group
            = f.search_field :pattern, class: 'form-control', placeholder: 'Search'

    %ul.nav.navbar-top-links.navbar-right
      - unless signed_in?
        %li= link_to "Sign in", signin_path

      - else
        - if current_user.crew_lead? && !current_user.crew.blank?
          %li= link_to 'My Crew', crew_path(current_user.crew)

        %li= link_to "My Profile", user_account_path(current_user)

        - if current_user.admin? || current_user.financier?
          %li= link_to 'All Crews', crews_path

        - if current_user.admin? || current_user.gatekeeper?
          %li= link_to "Check in", checkin_path

        - if current_user.admin?
          %li.dropdown
            %a.dropdown-toggle{ href: '#', data: { toggle: 'dropdown' }}
              Administration
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Statistics", statistics_path

        %li
          = link_to signout_path, method: 'delete' do
            %i.fa.fa-sign-out
            Log out
