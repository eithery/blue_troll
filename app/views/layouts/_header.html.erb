<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Blue Trolley", '#', id: 'logo' %>
      <nav>
        <ul class="nav pull-left">
          <li><%= link_to "Home", root_path %></li>
          <% if signed_in? %>
            <li><%= link_to "Crews", crews_path %></li>
            <li><%= link_to "New Participant", new_participant_path(crew_id: yield(:crew_id)) %></li>
            <li><%= link_to "Check in", checkin_path %></li>
            <li><%= link_to "Statistics", statistics_path %></li>
            <li><%= link_to "Upload Data", upload_path %></li>
          <% end %>
        </ul>
        <% if signed_in? %>
          <%= form_for(:search, url: search_path, html: { class: "navbar-search pull-left" }) do |f| %>
            <%= f.text_field :pattern, class: "search-query span2", placeholder: 'Search' %>
          <% end %>
        <% end %>
        <ul class="nav pull-right">
          <% unless signed_in? %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% else %>
            <li><%= link_to "Sign out", '#' %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
