<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Blue Trolley", root_path, id: 'logo', class: "navbar-brand" %>
      <nav>
        <ul class="nav navbar-nav pull-left">
<!--            
            <li><%= link_to "New Participant", new_participant_path(crew_id: yield(:crew_id)) %></li>
            <li><%= link_to "Statistics", statistics_path %></li>
-->
        </ul>
<!--
        <% if signed_in? %>
          <%= form_for(:search, url: search_path, html: { class: "navbar-form navbar-left" }) do |f| %>
            <%= f.text_field :pattern, class: "form-control col-lg-8", placeholder: 'Search' %>
          <% end %>
        <% end %>
-->
        <ul class="nav navbar-nav pull-right">
          <% unless signed_in? %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% else %>
            <% if current_user.crew_lead? && !current_user.crew.blank? %>
              <li><%= link_to 'My Crew', crew_path(current_user.crew) %></li>
            <% end %>
            <li><%= link_to "My Profile", user_account_path(current_user) %></li>
            <% if current_user.admin? || current_user.financier? %>
              <li><%= link_to 'All Crews', crews_path %></li>
            <% end %>
            <% if current_user.admin? || current_user.gatekeeper? %>
              <li><%= link_to "Check in", checkin_path %></li>
            <% end %>
            <% if current_user.admin? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Administration
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Upload Participants", upload_participants_path %></li>
                </ul>
              </li>
            <% end %>
            <li><%= link_to "Sign out", signout_path, method: 'delete' %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
