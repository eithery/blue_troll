.table-responsive
  %table#event_crews.hover.order-column.row-border.stripe
    %thead
      %tr
        %th #
        %th Crew Name
        %th Native Name
        %th Crew Lead
        %th Total (A/C/B)
        %th Paid
        %th Actions

    %tbody
      - @crews.each.with_index do |crew, idx|
        %tr= render 'crew', crew: crew, index: idx
