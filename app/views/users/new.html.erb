<%= provide(:title, 'Sign up') %>
<h1>Sign Up</h1>
<%= form_for(@user, html: { class: "form-horizontal well" }) do |f| %>
  <%= render 'shared/error_messages' %>

  <fieldset>
    <div class="field control-group">
      <%= f.label :name, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :name, class: "input-xlarge" %>
      </div>
    </div>

    <div class="field control-group">
      <%= f.label :email, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :email, class: "input-xlarge" %>
      </div>
    </div>

    <div class="field control-group">
      <%= f.label :password, class: "control-label" %>
      <div class="controls">
        <%= f.password_field :password, class: "input-xlarge" %>
      </div>
    </div>

    <div class="field control-group">
      <%= f.label :password_confirmation, 'Confirmation', class: "control-label" %>
      <div class="controls">
        <%= f.text_field :password_confirmation, class: "input-xlarge" %>
      </div>
    </div>

    <div class="actions form-actions">
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    </div>
  </fieldset>
<% end %>
