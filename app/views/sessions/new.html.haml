= provide(:title, "Login")
.middle-box.text-center.loginscreen.animated.fadeInDown
  = image_tag 'tarakan_bw'

  %h3 Welcome to BLUE TROLLEY Club
  = form_for(:session, url: sessions_path, html: { class: 'm-t', role: 'form' }) do |f|

    .form-group
      = f.text_field :login, placeholder: "Login or email address", maxlength: 64, autofocus: true, required: true, class: 'form-control'

    .form-group
      = f.password_field :password, placeholder: 'Password', maxlength: 16, required: true, class: 'form-control'

    = f.submit 'Login', class: 'btn btn-primary block full-width m-b'
    = link_to 'Forgot password?', cant_access_path

    %br
    %br
    %p.text-muted.text-center
      %small Do not have an account?
    = link_to 'Create an account', signup_path, class: 'btn btn-sm btn-white btn-block'

  %p.m-t
    %small Blue Trolley Club &copy; 2009-2016
